section.guests-container
  .guests
    h1.guests__title(
      data-animation = "fadeInUp"
    )
      = headerTitle
    .guests__description(
      data-animation = "fadeInUp"
    )
      = headerDescription

    .guests__list
      - var index = 0;
      each guest in guests
        - index++;
        if 3 < index
          .guest.guest_hidden(
            data-animation = "zoomIn"
          )
            .guest__photo
              img.guest__img(src=guest.img)
            .guest__details
              .guest__name
                = guest.name
              .guest__description
                = guest.description
        else
          .guest(
            data-animation = "zoomIn"
          )
            .guest__photo
              img.guest__img(src=guest.img)
            .guest__details
              .guest__name
                = guest.name
              .guest__description
                = guest.description
    button.button.button_guests(data-action="showMore")
      = showAction
