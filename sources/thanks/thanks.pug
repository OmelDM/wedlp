-
  var title = 'Благодарим!';
  var femaleName = 'Татьяна';
  var maleName = 'Кирилл';
  var description = 'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer ultrices malesuada ante quis pharetra. Nullam notn bibendum dolor. Ut vel turpis accumsan, efficitur dolor fermentum, tincidunt metus. Etiam ut ultrices nibh. Etiam aliquam mauris non hendrerit faucibus. Proin pulvinar congue ex, vitae.';

section.thanks-container(data-background-url='img/thanks_bg.jpg')
  .thanks
    .thanks__title(
      data-animation = "fadeInUp"
    )
      = title
    .thanks__description(
      data-animation = "fadeInUp"
    )
      = description
    .thanks__details(
      data-animation = "zoomIn"
    )
      .thanks__name
        = femaleName
      .thanks__heart
        include ../svg/heart.svg
      .thanks__name
        = maleName
