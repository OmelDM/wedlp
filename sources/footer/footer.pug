include ../logo/logo.pug
include ../social/social.pug

mixin info(person)
  .info__name
    = person.name + ' ' + person.secondName
  .info__contacts
    - if (person.phone)
      a.info__link(href="tel:"+person.phone)
        = person.phone
    - if (person.mail)
      a.info__link(href="mailto:"+person.mail)
        = person.mail

footer.footer-container#contacts
  .footer
    .footer__logo(
      data-animation = "fadeInUp"
    )
      +logo('logo_bottom')
    .info.info_male(
      data-animation = "fadeInLeft"
    )
      +info(data.general.male)
      .info__social.info__social_male
        +social(data.general.male, 'social__item_bottom')
    .info.info_female(
      data-animation = "fadeInRight"
    )
      +info(data.general.female)
      .info__social.info__social_female
        +social(data.general.female, 'social__item_bottom')
